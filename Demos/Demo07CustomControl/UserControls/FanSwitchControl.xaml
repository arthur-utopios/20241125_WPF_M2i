<UserControl x:Class="Demo07CustomControl.UserControls.FanSwitchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo07CustomControl.UserControls"
             xmlns:cc="clr-namespace:Demo07CustomControl.Controls"
             mc:Ignorable="d">
    <StackPanel>
        <cc:FanControl Activate="{Binding Mode=TwoWay, Path=IsChecked, ElementName=Switch}" Margin="0, 3"/>
        <CheckBox Content="On/Off" x:Name="Switch" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
